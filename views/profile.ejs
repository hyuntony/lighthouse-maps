<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>



    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />

    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <link rel="stylesheet" href="/styles/maps.css" type="text/css" />


    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/maps.js"></script>

  </head>

  <body>

    <header>
      <%- include('partials/_header') %>
    </header>

    <div class="new-map-form"></div>
    <h2>My Maps</h2>
    <div class="mapContainer">

      <% for (const map of maps) { %>
      <div class="totalMapBox">
        <a class="mapBox" href="/map/<%= map.id %>">
          <img src='<%= map.thumbnail_url %>' alt="Default Map Pic">
        </a>

        <div class="hoverDetails">
          <h3><%= map.map_name %></h3>
          <p><%= map.description %></p>
          <p class="time"><%= map.date_created %></p>
        </div>

        <div class="edit-remove-button">
          <form method="GET" action="/map/<%= map.id %>/edit">
            <button class="btn btn-secondary" type="submit">Edit</button>
          </form>
          <form method = 'POST' action = '/map/<%= map.id %>/delete'>
            <button class="btn btn-secondary" type="submit"> Remove</button>
          </form>
        </div>

      </div>
        <% } %>
    </div>
    <h2>Your Favorites</h2>

    <div class="mapContainer">
      <% for (const fave of favorites) { %>
      <div class="totalMapBox">
        <a class ="mapBox" href="/map/<%= fave.maps_id %>">
          <img src='<%= fave.thumbnail_url %>' alt="Default Map Pic">
        </a>
        <div class="hoverDetails">
            <h3><%= fave.name %></h3>
            <p><%= fave.description %></p>
            <p class="time"><%= fave.date_created %></p>
        </div>
      </div>
          <% } %>

    </div>









  </body>
</html>
