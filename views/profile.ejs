<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>



    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />

    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>

  <body>

    <header>
      <%- include('partials/_header') %>
    </header>
    <h1>Lighthouse Maps</h1>


    <div id="mapContainer">

      <% for (const map of maps) { %>
      <div class="mapBox">
       <a href="/map/<%= map.id %>">
        <img src='<%= map.thumbnail_url %>' alt="Default Map Pic" width="100" height="100">
      </a>
        <p1><%= map.map_name %></p1>
        <div class="hoverDetails">

          <p3><%= map.description %></p3>
          <p2><%= map.date_created %></p2>
        </div>

        <form method="GET" action="/map/<%= map.id %>/edit">
          <button type="submit">Edit</button>
        </form>
        <form method = 'POST' action = '/map/<%= map.id %>/delete'>
          <button type="submit"> Remove</button>
        </form>
        <% } %>
      <h2>Your Favorites</h2>
        <% for (const fave of favorites) { %>
      <div class="mapBox">
        <a href="/map/<%= fave.maps_id %>">
          <img src='<%= fave.thumbnail_url %>' alt="Default Map Pic" width="100" height="100">
        </a>
          <p2><%= fave.name %></p3>
          <div class="hoverDetails">

            <p3><%= fave.description %></p3>
            <p2><%= fave.date_created %></p2>
          </div>
        </div>
            <% } %>






    </div>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
</html>
