  <body>
    <header>
      <%- include('partials/_header') %>
    </header>
    <h1>Lighthouse Maps</h1>
    <form method="get" action="/map/new">
      <button class="btn btn-primary" type="submit">Create New Map</button>
    </form>


    <div id="mapContainer">

      <% for (const map of maps) { %>
     <div class="totalMapBox">
       <a class="mapBox" href="/map/<%= map.id %>">
        <img src='<%= map.thumbnail_url %>' alt="Default Map Pic" width="100" height="100">
      </a>
        <p2><%= map.name %></p3>

        <div class="hoverDetails">
          <p3 class="hide"><%= map.description %></p3>
          <p2 class="hide"><%= map.date_created %></p2>
        </div>

      </div>


          <% } %>

    </div>



    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </body>
